<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppTranslucentTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    	<item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="DialogNoTitle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
	
	<style name="BorderlessButton" parent="@style/Widget.AppCompat.Button.Borderless">
    </style>
    
	<style name="ActionbarButton" parent="@style/Widget.AppCompat.ActionButton">
    </style>
    
	<style name="ActionbarTitle" parent="@style/Widget.AppCompat.ActionButton">
    </style>
	
</resources>
