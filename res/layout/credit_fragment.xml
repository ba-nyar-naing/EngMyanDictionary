<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/dialog_vertical_margin"
    android:layout_marginLeft="@dimen/dialog_horizontal_margin"
    android:layout_marginRight="@dimen/dialog_horizontal_margin"
    android:layout_marginTop="@dimen/dialog_vertical_margin"
    tools:context=".MainActivity" >
    
    <LinearLayout
        android:id="@+id/layoutButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
	
        <include layout="@layout/layout_dialog_one_button"
       		 android:layout_width="match_parent"
			 android:layout_height="@dimen/dialog_button_bar_height" />
    
    </LinearLayout>

    <WebView
        android:id="@+id/webViewCredit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutButtonBar"
        android:layout_marginBottom="1dp" />

</RelativeLayout>
