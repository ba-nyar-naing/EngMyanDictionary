<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_full_holo_dark" >
    
    <include layout="@layout/recents_title_frame" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"
        android:layout_marginLeft="@dimen/dialog_horizontal_margin"
        android:layout_marginRight="@dimen/dialog_horizontal_margin"
        android:layout_marginTop="@dimen/top_margin_actionbar"
        android:background="@color/background_holo_light"
        android:baselineAligned="false" >

        <ListView
            android:id="@+id/listViewRecents"
            style="@style/AbsListViewHolo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

        </ListView>

    </LinearLayout>

</RelativeLayout>
