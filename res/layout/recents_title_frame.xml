<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameRecentTitle"
    style="@style/DoneBar"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true" >
    
   <TextView
       style="@style/DoneBar.Title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="left|center_vertical"
       android:layout_marginLeft="58dp"
       android:text="@string/recents_title"
       android:textAppearance="?android:attr/textAppearanceMedium" />

   <ImageButton
       android:id="@+id/closeButton"
       style="@style/DoneBar.Button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="left|center_vertical"
       android:layout_marginLeft="4dp"
       android:contentDescription="@string/action_close"
       android:src="@drawable/ic_action_cancel" />
   
   <View
       android:layout_width="1dp"
       android:layout_height="match_parent"
       android:layout_gravity="top|left"
       android:layout_marginBottom="2dp"
       android:layout_marginLeft="50dp"
       android:background="@color/bright_foreground_disabled_holo_light" />
   
   <ImageButton
        android:id="@+id/clearButton"
        style="@style/DoneBar.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="4dp"
        android:contentDescription="@string/action_clear"
        android:src="@drawable/ic_action_delete" />
    
</FrameLayout>
