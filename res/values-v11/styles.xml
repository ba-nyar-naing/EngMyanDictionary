<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- API 11 theme customizations can go here. -->
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>
    
    <style name="AppTranslucentTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    	<item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="DialogNoTitle" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
	
	<style name="BorderlessButton" parent="@android:style/Widget.Holo.Button.Borderless">
    </style>
    
	<style name="ActionbarButton" parent="@android:style/Widget.Holo.ActionButton">
    </style>

</resources>
