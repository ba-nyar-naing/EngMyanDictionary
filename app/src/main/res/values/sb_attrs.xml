<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <dimen name="search_button_height">40dip</dimen>
    <dimen name="search_button_width">40dip</dimen>
    
    <dimen name="searchbar_height">48dip</dimen>
    <dimen name="searchbar_margin_top">4dip</dimen>
    <dimen name="glass_button_height">25dip</dimen>
    <dimen name="glass_button_width">25dip</dimen>
    <dimen name="clear_button_height">24dip</dimen>
    <dimen name="clear_button_width">24dip</dimen>
	
	<style name="SearchBar">
	</style>
	
    <style name="SearchBar.EditText" parent="@android:style/Widget.TextView">
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:textColor">@android:color/black</item>
	    <item name="android:layout_marginLeft">30.0dip</item>
	    <item name="android:layout_marginRight">30.0dip</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:inputType">textFilter</item>
	</style>
    <style name="SearchBar.Button" parent="@android:style/Widget.Button">
	    <item name="android:padding">6dp</item>
	    <item name="android:layout_height">@dimen/search_button_height</item>
	    <item name="android:layout_width">@dimen/search_button_width</item>
	    <item name="android:background">?android:attr/selectableItemBackground</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">30dp</item>
	</style>
    <style name="SearchBar.Button.Disable" parent="@style/SearchBar.Button">
	    <item name="android:background">@android:color/transparent</item>
	</style>
    <style name="SearchBar.Button.Glass" parent="@style/SearchBar.Button.Disable">
	    <item name="android:layout_height">@dimen/glass_button_width</item>
	    <item name="android:layout_width">@dimen/glass_button_height</item>
	    <item name="android:src">@drawable/ic_search_gray_24dp</item>
	</style>
    <style name="SearchBar.Button.Clear" parent="@style/SearchBar.Button">
	    <item name="android:layout_height">@dimen/clear_button_height</item>
	    <item name="android:layout_width">@dimen/clear_button_width</item>
	    <item name="android:src">@drawable/ic_clear_gray_24dp</item>
	</style>

</resources>
